{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}