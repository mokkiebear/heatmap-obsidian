{
  "name": "heatmap",
  "version": "1.0.0",
  "description": "A heatmap calendar plugin for Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"node esbuild.config.mjs\" \"npm run copyAndWatchMainJS\" \"npm run copyAndWatchStylesJS\" \"npm run copyAndWatchManifestJS\"",
    "copyAndWatchMainJS": "cpx \"main.js\" \"EXAMPLE_VAULT\\.obsidian\\plugins\\heatmap-calendar\" -w",
    "copyAndWatchStylesJS": "cpx \"./src/styles.css\" \"EXAMPLE_VAULT\\.obsidian\\plugins\\heatmap-calendar\" -w",
    "copyAndWatchManifestJS": "cpx \"manifest.json\" \"EXAMPLE_VAULT\\.obsidian\\plugins\\heatmap-calendar\" -w",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs --production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "jest"
  },
  "keywords": [
    "obsidian"
  ],
  "author": "Maksim Rubanau (mokkiebear)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.9.1",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "builtin-modules": "4.0.0",
    "concurrently": "9.1.0",
    "cpx": "^1.5.0",
    "esbuild": "0.24.0",
    "jest": "^29.7.0",
    "obsidian": "latest",
    "ts-jest": "^29.2.5",
    "tslib": "2.8.1",
    "typescript": "5.6.3",
    "jest-environment-jsdom": "^29.7.0"
  }
}
